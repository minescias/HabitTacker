{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "HT tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/HtTests",
            "args": ["--gtest_filter=EditAction*"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                    "symbolSearchPath": "{workspaceFolder}/build",
                }
            ],
        },

        {
            "name": "Core tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/CoreTests",
            "args": ["--gtest_filter=DateLiteral*"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                    "symbolSearchPath": "{workspaceFolder}/build",
                }
            ],
        }

        {
            "name": "htr tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/htr",
            "args": ["3", "edit", "name=Trzeci"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                    "symbolSearchPath": "{workspaceFolder}/build",
                }
            ],
        }
    ]
}
